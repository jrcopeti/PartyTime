<div class="container">
  <h3><%= @event.title %></h3>
      <ul>
      <li><%= @event.description %></li>
      <li><%= @event.status %></li>
      <li><%= @event.category%></li>
      <li><%= @event.capacity %></li>
      <li><%= @event.dresscode %></li>
      <li><%= @event.start_date.strftime("%A, %d %b %Y at %H:%M") %></li>
      <li><%= @event.end_date.strftime("%A, %d %b %Y at %H:%M")  %></li>
    </ul>
    <h4> Club <%= link_to @event.venue.name, venue_path(@venue) %></h4>
    <p> Adress: <%= @event.venue.address %></p>

      <% if @event.user == current_user %>
        <%= link_to "Not Happy? Edit your event", edit_venue_event_path(@venue, @event)%>
        <%=link_to "Do you want to delete this event?", event_path(@event), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <%end%>

     <%= link_to "Back to all events", events_path %>
</div>
