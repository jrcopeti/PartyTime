<div class="club-detail" style="background-image: url('<%= @event.image_url %>'); height: 65vh; width: 100%;">

    <div class="club-nav">
      <a href="<%= venues_path %>">
        <div class="icon-box">
          <i class="fa-regular fa-angle-left"></i>
        </div>
      </a>
  <% if current_user.favorited?(@event)%>
        <div class="icon-box">
          <a href="<%=unfavorite_venue_path(@event)%>">
            <i class="fa-sharp fa-solid fa-heart fa-lg red-heart"></i>
          </a>
        </div>
  <% else %>
        <div class="icon-box">
          <a href="<%=favorite_venue_path(@event)%>">
           <i class="fa-regular fa-heart"></i>
          </a>
       </div>
  <% end %>
    </div>
   <div class="club-box">
      <div class="club-text">
        <div class="event-head">
          <div class="event-title">

            <h1><%= @event.title %></h1>
          </div>
          <p><%= link_to @event.venue.name, venue_path(@venue) %></p>
            <% if @percentage_attending >= 0  && @percentage_attending <= 30 %>
                <i class="fa-regular fa-user"></i>
                <i class="fa-regular fa-user"></i>
                <i class="fa-regular fa-user"></i>
              <%elsif @percentage_attending >= 31  && @percentage_attending <= 60 %>
                <i class="fa-solid fa-user"></i>
                <i class="fa-regular fa-user"></i>
                <i class="fa-regular fa-user"></i>
              <%elsif @percentage_attending >= 61  && @percentage_attending <= 99%>
                <i class="fa-solid fa-user"></i>
                <i class="fa-solid fa-user"></i>
                <i class="fa-regular fa-user"></i>
              <%elsif @percentage_attending == 100 %>
                <i class="fa-solid fa-user"></i>
                <i class="fa-solid fa-user"></i>
                <i class="fa-solid fa-user"></i>
              <%end%>
        </div>
      </div>
      <div class="club-details">
      <div class="event-main-facts">
        <h5>Description:</h5>
        <p><%= @event.description %></p>
        <h5>Venue:</h5>
        <p><%= link_to @event.venue.name, venue_path(@venue) %><br><%= @venue.address %></p>
        <h5>Date:</h5>
        <p><%=@event.start_date.strftime("%a, %d %b %Y")%> <br><%= @event.start_date.strftime("%H:%M") %> - <%= @event.end_date.strftime("%H:%M") %></p>
        <h5>LineUp:</h5>
        <% @event.lineups.each do |lineup| %>
          <%= link_to lineup.artist.name, artist_path(lineup.artist.id) %>
        <% end %>
      </div>
        <div class="event-facts">
            <div class="event-keyfact">
              <p>Status: <%= @event.status %></p>
            </div>
            <div class="event-keyfact">
              <p>Category: <%= @event.category %></p>
            </div>
            <div class="event-keyfact">
              <p>Capacity: <%= @event.capacity %></p>
            </div>
            <div class="event-keyfact">
              <p>Dresscode: <%= @event.dresscode %></p>
            </div>
        </div>


   <% unless @rsvp.persisted? %>
        <%= simple_form_for [@event, @rsvp] do |f|  %>
          <%= f.submit "Interested"  %>
        <% end  %>
        <% else %>
        <%= button_to "NOT Interested Anymore", event_rsvp_path(@event, @rsvp), method: :delete %>
      <% end %>


  <h4>Attending: <%= @event.rsvps.count %><h4>
    <% @event.rsvps.each do |rsvp| %>
    <ul>
    <li><%= link_to rsvp.user.full_name, user_path(rsvp.user.id) %></li>
    </ul>
  <% end %>



  <% if @event.happening? %>
    <%= @busy_queue %>
  <% end  %>



  <h5> <% if @rsvp.persisted? && @event.happening? && @rsvp.current_attending == false  %>
          <%= button_to "Checkin event", event_rsvp_path(@event, @rsvp), method: :patch  %>
          <%= @all_current_attending %>
        <% end %>
  </h5>

      <% if @event.user == current_user %>
        <%= link_to "Edit your event", edit_venue_event_path(@venue, @event)%>
        <%=link_to "Do you want to delete this event?", event_path(@event), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <%end%>


     <%= link_to "Back to all events", root_path %>
    <%= link_to "Chatroom", chatroom_path(@chatroom) %>
</div>
