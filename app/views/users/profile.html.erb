 <%# CURRENT_USER PROFILE PAGE%>
  <div class="event-title">
    <h1>Profile</h1>
    <div class="event-icon">
      <i class="fa-solid fa-bell fa-lg"></i>
      <i class="fa-solid fa-comments fa-lg"></i>
    </div>
  </div>
<div class="container">
  <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, height: 250, width: 250, crop: "fill", radius: "max"%>
  <% else %>
      <%= image_tag(current_user.avatar_url, width: "250", height: "250") unless current_user.avatar_url.nil?%>
  <%end %>


  <h2> <%= current_user.nickname %></h2>
  <h3> <%= current_user.full_name %></h3>
  <h3><%=current_user.email %></h3>
  <p><%= current_user.bio %></p>

  <hr/>

  <% current_user.follow_requests.each do |request| %>
    <h5><%= link_to request.followerable.nickname, user_path(request.followerable.id) %> wants to follow you</h5>
    <%= button_to "Accept", accept_path(request.followerable) %>
    <%= button_to "Decline", decline_path(request.followerable) %>
  <% end  %>

  <%# if current_user.mutual_following_with?(@user)%>
    <%#= link_to "chatroom", chatroom_path(@chatroom) %>
  <%# end %>

  <h4>Followers (<%=current_user.followers.count%>)</h4><% current_user.followers.sample(3).each do |follower| %>
    <% if follower.photo.attached? %>
        <%= cl_image_tag follower.photo.key, height: 100, width: 100, crop: "thumb", radius: "max"%>
    <% else %>
        <%= image_tag(follower.avatar_url, height: "100", width: "100", crop: "fill") unless follower.avatar_url.nil?%>
    <%end %>
  <ul>
  <li><%= link_to follower.nickname, user_path(follower.id) %></li>
  </ul>
  <% end %>
  <br/>
  <h4>Following (<%=current_user.following.count%>)</h4><% current_user.following.sample(3).each do |following| %>
      <% if following.photo.attached? %>
        <%= cl_image_tag following.photo.key, height: 100, width: 100, crop: "thumb", radius: "max"%>
    <% else %>
        <%= image_tag(following.avatar_url, height: "100", width: "100", crop: "fill") unless following.avatar_url.nil?%>
    <%end %>
  <ul>
  <li><%= link_to following.nickname, user_path(following.id) %></li>
  </ul>
  <% end  %>

<hr/>

  <div>
    <h3>My favorites events</h3>
      <% current_user.favorited_by_type("Event").last(5).each do |favorite| %>
        <ul>
          <li><%=link_to favorite.title, venue_event_path(favorite.venue_id, favorite.id)  %></li>
        </ul>
    <% end %>
  </div>

  <div>
    <h3>My favorites venues</h3>
      <%current_user.favorited_by_type("Venue").each do |favorite|%>
        <ul>
          <li><%=link_to favorite.name, venue_path(favorite.id)%></li>
        </ul>
     <% end %>
  </div>

  <div>
    <h3>My Top Artists</h3>
      <%current_user.favorited_by_type("Artist").each do |favorite|%>
        <ul>
         <li><%=link_to favorite.name, artist_path(favorite.id)%></li>
        </ul>
    <% end %>
  </div>

  <div>
    <h3>My upcoming Events</h3>
      <% @user.rsvps.future.each do |rsvp| %>
      <ul>
        <li><%= link_to rsvp.event.title, venue_event_path(rsvp.event.venue_id, rsvp.event.id) %></li>
      </ul>
    <% end %>
  </div>

  <div>
    <h3>My past Events</h3>
      <% @user.rsvps.past.each do |rsvp| %>
      <ul>
        <li><%= link_to rsvp.event.title, venue_event_path(rsvp.event.venue_id, rsvp.event.id) %></li>
      </ul>
    <% end %>
  </div>




  <%= link_to "Edit Profile", edit_user_path(current_user) %>
  <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>



</div>
