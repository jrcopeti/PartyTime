<% content_for :meta_title, "#{@user.nickname} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @user.bio %>
<% content_for :meta_image, asset_url('/assets/logo.png'); %>


<%#THIS IS OTHER USERS PROFILE PAGE%>
  <div class="event-title">
    <h1>User Page</h1>
    <div class="event-icon">
      <i class="fa-solid fa-bell fa-lg"></i>
      <i class="fa-solid fa-comments fa-lg"></i>
    </div>
  </div>
<div class="container">
  <% if @user.photo.attached? %>
      <%= cl_image_tag @user.photo.key, width: 250, height: 250, radius:"max", crop: "fill"%>
  <% else %>
      <%= image_tag(@user.avatar_url, width: "250", height: "250") unless @user.avatar_url.nil?%>
  <%end %>


  <h2> <%= @user.nickname %></h2>
  <h3> <%= @user.full_name %></h3>
  <p><%= @user.bio %></p>

  <hr/>

  <% if current_user.following?(@user) %>
    <%= button_to "Unfollow", unfollow_user_path(@user)  %>
  <% elsif current_user.sent_follow_request_to?(@user) %>
    <%= button_to "Cancel Follow Resquest", cancel_user_path(@user) %>
  <% else  %>
    <%= button_to "Follow", follow_user_path(@user) unless current_user == @user %>
  <% end %>


  <hr/>

    <h4><%=link_to "Followers", followers_user_path(@user)  %> (<%=@user.followers.count%>)</h4><% @user.followers.sample(3).each do |follower| %>
    <% if follower.photo.attached? %>
        <%= cl_image_tag follower.photo.key, height: 100, width: 100, crop: "thumb", radius: "max"%>
    <% else %>
        <%= image_tag(follower.avatar_url, height: "100", width: "100", crop: "fill") unless follower.avatar_url.nil?%>
    <%end %>
  <ul>
  <li><%= link_to follower.nickname, user_path(follower.id) %></li>
  </ul>
  <% end %>
  <br/>
  <h4><%= link_to "Following", following_user_path(@user) %> (<%=@user.following.count%>)</h4><% @user.following.sample(3).each do |following| %>
      <% if following.photo.attached? %>
        <%= cl_image_tag following.photo.key, height: 100, width: 100, crop: "thumb", radius: "max"%>
    <% else %>
        <%= image_tag(following.avatar_url, height: "100", width: "100", crop: "thumb", radius: "max")  unless following.avatar_url.nil?%>
    <%end %>
  <ul>
  <li><%= link_to following.nickname, user_path(following.id) %></li>
  </ul>
  <% end  %>

  <div>
    <h3>Upcoming Events</h3>
      <% @user.rsvps.future.each do |rsvp| %>
      <ul>
        <li><%= link_to rsvp.event.title, venue_event_path(rsvp.event.venue_id, rsvp.event.id) %></li>
      </ul>
    <% end %>
  </div>


  <div>
    <h3>Favorite venues</h3>
      <%@user.favorited_by_type("Venue").each do |favorite|%>
        <ul>
          <li><%=link_to favorite.name, venue_path(favorite.id)%></li>
        </ul>
     <% end %>
  </div>

  <div>
    <h3>Top artists</h3>
      <%@user.favorited_by_type("Artist").each do |favorite|%>
        <ul>
         <li><%=link_to favorite.name, artist_path(favorite.id)%></li>
        </ul>
    <% end %>
  </div>


</div>
