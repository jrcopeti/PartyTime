<%#THIS IS OTHER USERS PROFILE PAGE%>
  <div class="event-title">
    <h1>Profile</h1>
    <div class="event-icon">
      <i class="fa-solid fa-bell fa-lg"></i>
      <i class="fa-solid fa-comments fa-lg"></i>
    </div>
  </div>
<div class="container">
  <% if @user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, width: 50, height: 50, radius:"max", crop: "thumb"%>
  <% else %>
      <%= image_tag(@user.avatar_url)%>
  <%end %>


  <h2> <%= @user.nickname %></h2>
  <h3> <%= @user.full_name %></h3>
  <h3><% @user.email %></h3>
  <p><%= @user.bio %></p>

  <hr/>

  <% if current_user.following?(@user) %>
    <%= button_to "Unfollow", unfollow_path(@user)  %>
  <% elsif current_user.sent_follow_request_to?(@user) %>
    <%= button_to "Cancel Follow Resquest", cancel_path(@user) %>
  <% else  %>
    <%= button_to "Follow", follow_path(@user) %>
  <% end %>

  <hr/>

  <div>
    <h3>My favorites events</h3>
      <% @user.favorited_by_type("Event").each do |favorite| %>
        <ul>
          <li><%=link_to favorite.title, venue_event_path(favorite.venue_id, favorite.id)  %></li>
        </ul>
    <% end %>
  </div>

  <div>
    <h3>My favorites venues</h3>
      <%@user.favorited_by_type("Venue").each do |favorite|%>
        <ul>
          <li><%=link_to favorite.name, venue_path(favorite.id)%></li>
        </ul>
     <% end %>
  </div>

  <div>
    <h3>My favorites artists</h3>
      <%@user.favorited_by_type("Artist").each do |favorite|%>
        <ul>
         <li><%=link_to favorite.name, artist_path(favorite.id)%></li>
        </ul>
    <% end %>
  </div>

  <div>
    <h3>My upcoming Events</h3>
      <% @user.rsvps.future.each do |rsvp| %>
      <ul>
        <li><%= link_to rsvp.event.title, venue_event_path(rsvp.event.venue_id, rsvp.event.id) %></li>
      </ul>
    <% end %>
  </div>

  <div>
    <h3>My past Events</h3>
      <% @user.rsvps.past.each do |rsvp| %>
      <ul>
        <li><%= link_to rsvp.event.title, venue_event_path(rsvp.event.venue_id, rsvp.event.id) %></li>
      </ul>
    <% end %>
  </div>





</div>
