<% content_for :meta_title, "Edit #{@user.full_name} on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, "Manage your PartyTime account and stay up-to-date on all your event details." %>
<% content_for :meta_image, asset_url('/assets/logo.jpg') %>

<div class="container">
  <h1>Edit profile</h1>

  <%= simple_form_for @user do |f| %>
      <%= f.input :full_name %>
      <%= f.input :nickname %>
      <%= f.input :bio %>
      <%= f.input :address %>
      <%= f.input :photo, as: :file %>
      <%= f.submit %>
  <%end %>
</div>
