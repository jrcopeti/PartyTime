<div>
  <div class="event-title">
    <h1>Events</h1>
    <div class="event-icon">
      <i class="fa-solid fa-bell fa-lg"></i>
      <i class="fa-solid fa-comments fa-lg"></i>
    </div>
  </div>


  <%= form_with url: root_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a Event"%>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

      <div class="event-date">
        <% prev_date = nil %>
        <% @events_by_date.each do |date, events| %>
          <% if prev_date != date.strftime("%d.%m. - %a") %>
            <% prev_date = date.strftime("%d.%m. - %a") %>
              <h3> <%= prev_date %> </h3>
        <% end %>
      </div>
      <div class="event-card-container">
        <% events.each do |event| %>
        <div class="event-card">
          <h2><%= link_to event.title, venue_event_path(event.venue_id, event.id) %></h2>
            <div class="event-item">
              <p><%= link_to event.venue.name, venue_path(event.venue_id)%></p>
              <p>Starts at <%= event.start_date.strftime("%H:%M") %>
          <% if current_user.favorited?(event)%>
                <div class="icon-box">
                  <a href="<%=unfavorite_event_path(event.id)%>">
                    <i class="fa-sharp fa-solid fa-heart fa-lg red-heart"></i>
                  </a>
                </div>
          <% else %>
                <div class="icon-box">
                  <a href="<%=favorite_event_path(event.id)%>">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" ><path fill="currentColor" d="m12.1 18.55l-.1.1l-.11-.1C7.14 14.24 4 11.39 4 8.5C4 6.5 5.5 5 7.5 5c1.54 0 3.04 1 3.57 2.36h1.86C13.46 6 14.96 5 16.5 5c2 0 3.5 1.5 3.5 3.5c0 2.89-3.14 5.74-7.9 10.05M16.5 3c-1.74 0-3.41.81-4.5 2.08C10.91 3.81 9.24 3 7.5 3C4.42 3 2 5.41 2 8.5c0 3.77 3.4 6.86 8.55 11.53L12 21.35l1.45-1.32C18.6 15.36 22 12.27 22 8.5C22 5.41 19.58 3 16.5 3Z"/></svg>
                  </a>
              </div>
          <% end %>
            </div>
        </div>
      </div>
      <% end %>
    <% end %>



   

    <%= link_to "Back to home", root_path %>
    <%= link_to "Create an event", new_event_path  %>
    </div>
