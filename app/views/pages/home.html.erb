
  <div class="event-search">
    <%= form_with url: root_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query, params[:query], class: "form-control-event", placeholder: "Search for Events..." %>
      <%#= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>


  <div class="events-all">
    <h3>Popular Events</h3>
  <%@popular_events.each do |pop| %>
  <div class="event-card-container">
      <div class="event-card">
          <img src="<%= pop.image_url %>" alt="">
        <div class="event-box">
            <div class="event-item">
              <p><%=pop.start_date.strftime("%d.%m. - %^a")  %></p>
              <p><%= pop.start_date.strftime("%H:%M") %> at <%= link_to pop.venue.name, venue_path(pop.venue_id)%></p>
                <% if current_user.favorited?(pop)%>
                     <a href='<%=unfavorite_event_path(pop.id)%>'>
                      <i class="fa-solid fa-heart"></i>
                    </a>
                  <% else %>
                    <a href='<%=favorite_event_path(pop.id)%>'>
                      <i class="fa-regular fa-heart"></i>
                    </a>
                  <% end %>
                </div>
                <h5><%= link_to pop.title, venue_event_path(pop.venue_id, pop.id) %></h5>
              </div>
            </div>
    </div>
    <% end %>
  </div>


  <div class="events-all">
    <% prev_date = nil %>
    <% @events_by_date.each do |date, events| %>
      <% if prev_date != date.to_date.strftime("%d.%m. - %^a") %>
        <% prev_date = date.to_date.strftime("%d.%m. - %^a") %>


  <div class="event-date">
    <h3> <%= prev_date %> </h3>
  </div>
  <% end %>

  <div class="event-card-container">
    <% events.each do |event| %>
      <div class="event-card">
          <%= cl_image_tag event.photo.key, height: 100, width: 100, crop: :fill %>
        <div class="event-box">
            <div class="event-item">
              <p><%= event.start_date.strftime("%H:%M") %> at <%= link_to event.venue.name, venue_path(event.venue_id)%></p>
                <% if current_user.favorited?(event)%>

                    <a href='<%=unfavorite_event_path(event.id)%>'>

                      <i class="fa-solid fa-heart"></i>
                    </a>
                  <% else %>
                    <a href='<%=favorite_event_path(event.id)%>'>
                      <i class="fa-regular fa-heart"></i>
                    </a>
                  <% end %>
                </div>
                <h5><%= link_to event.title, venue_event_path(event.venue_id, event.id) %></h5>
              </div>
            </div>
          <% end %>
    </div>
    <% end %>
  </div>
