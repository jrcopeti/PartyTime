<div class="club-detail" style="background-image: url('<%= @venue.image_url %>'); height: 45vh; width: 100%;">
    <div class="club-nav">
      <a href="<%= venues_path %>">
        <div class="icon-box">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M16 22L6 12L16 2l1.775 1.775L9.55 12l8.225 8.225L16 22Z"/></svg>
        </div>
      </a>
  <% if current_user.favorited?(@venue)%>
        <div class="icon-box">
          <a href="<%=unfavorite_venue_path(@venue)%>">
            <i class="fa-sharp fa-solid fa-heart fa-lg red-heart"></i>
          </a>
        </div>
  <% else %>
        <div class="icon-box">
          <a href="<%=favorite_venue_path(@venue)%>">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" ><path fill="currentColor" d="m12.1 18.55l-.1.1l-.11-.1C7.14 14.24 4 11.39 4 8.5C4 6.5 5.5 5 7.5 5c1.54 0 3.04 1 3.57 2.36h1.86C13.46 6 14.96 5 16.5 5c2 0 3.5 1.5 3.5 3.5c0 2.89-3.14 5.74-7.9 10.05M16.5 3c-1.74 0-3.41.81-4.5 2.08C10.91 3.81 9.24 3 7.5 3C4.42 3 2 5.41 2 8.5c0 3.77 3.4 6.86 8.55 11.53L12 21.35l1.45-1.32C18.6 15.36 22 12.27 22 8.5C22 5.41 19.58 3 16.5 3Z"/></svg>
          </a>
       </div>
  <% end %>
    </div>
    <div class="club-box">
      <div class="club-text">
        <div class="club-head">
          <div class="club-title">
            <h1><%=@venue.name%></h1>
            <p><%= @venue.address %></p>
          </div>
          <img src="<%=@venue.logo %>" alt="">
        </div>
      </div>
      <div class="club-details">
        <p><%=@venue.definition %></p>
      </div>
      <div class="events-upcoming">
        <h3>Upcoming events</h3>
        <div class="events-details">
            <%@venue.events.each do |event| %>
            <p><%= link_to event.title, venue_event_path(@venue, event.id)  %></p>
            <%end%>


        </div>
      </div>

    </div>
  <div>
<%= render "mapbox_venue" %>
  </div>
<br>
<br>
<br>
<br>
</div>
